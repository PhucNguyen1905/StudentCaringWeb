</head>

<body class="dashboard dashboard_1">
    <div class="full_container">
        <div class="inner_container">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div class="sidebar_blog_1">
                    <div class="sidebar-header">
                        <div class="logo_section">
                            <a href="/consul"><img class="logo_icon img-responsive" src="/images/logo/logo.png"
                                    alt="#" /></a>
                        </div>
                    </div>
                    <div class="sidebar_user_info">
                        <div class="icon_setting"></div>
                        <div class="user_profle_side">
                            <div class="user_img"><img class="img-responsive" src="<%= user.avatarURL %>" alt="#" />
                            </div>
                            <div class="user_info">
                                <h6><%= user.lname %> <%= user.fname %></h6>
                                <p><span class="online_animation"></span> Online</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar_blog_2">
                    <h4> Trường ĐH Bách Khoa</h4>
                    <ul class="list-unstyled components">

                        <li>
                            <a href="#info" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i
                                    class="fa fa-dashboard yellow_color"></i> <span>Cơ hội việc làm</span></a>
                            <ul class="collapse list-unstyled" id="info">
                                <li><a href="/consul/list-intern">> <span>Danh sách việc làm</span></a></li>
                                <li><a href="/consul/add-intern">> <span>Thêm việc làm mới</span></a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="/consul/chat">
                                <i class="fa fa-paper-plane red_color"></i> <span>Tư vấn Sinh viên</span></a>
                        </li>

                    </ul>
                </div>
            </nav>
            <!-- end sidebar -->
            <!-- right content -->
            <div id="content">
                <!-- topbar -->
                <div class="topbar">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="full">
                            <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i
                                    class="fa fa-bars"></i></button>

                            <div class="right_topbar">
                                <div class="icon_info">
                                    <ul>
                                        <!-- Edit here to update new attention -->
                                        <li><a href="/consul/chat"><i class="fa fa-envelope-o"></i><span
                                                    class="badge"></span></a>
                                        </li>
                                    </ul>
                                    <ul class="user_profile_dd">
                                        <li>
                                            <a class="dropdown-toggle" data-toggle="dropdown"><img
                                                    class="img-responsive rounded-circle" src="<%= user.avatarURL %>"
                                                    alt="#" /><span class="name_user"><%= user.fname %></span></a>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="/consul">My Profile</a>
                                                <a class="dropdown-item" href="/consul/logout"><span>Log Out</span> <i
                                                        class="fa fa-sign-out"></i></a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                <!-- end topbar -->